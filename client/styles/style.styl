body
  background offwhite

.binRed 
  height: 150px
  width: 150px	
  float: left
  margin-right: 30px
  background: red

.binGreen
  @extend .binRed
  background: green

.binBlue
  @extend .binRed
  background: blue

.circleRed 
  width: 50px
  height: 50px
  float: left
  margin: 10px
  -webkit-border-radius: 25px
  -moz-border-radius: 25px
  border-radius: 25px
  background: red

.circleGreen
  @extend .circleRed
  background: green

.hoverbinRed
  @extend .binRed
  background: salmon

.hoverbinGreen
  @extend .binGreen
  background: palegreen

.hoverbinBlue
  @extend .binBlue
  background: cornflowerblue

.circleBlue
  @extend .circleRed
  background: blue

.innerCircle 
  text-align: center
  width: 18px
  height: 18px
  position: relative
  top: -4px
  right: -30px
  -webkit-border-radius: 9px
  -moz-border-radius: 9px
  border-radius: 9px
  background: yellow    

.grid
  display flex
  flex-wrap wrap
  max-width 800px
  height: 200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 1rem 1rem 1rem
  padding 1rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03)
  position relative

.figure
  @extend .grid-figure
  cursor pointer

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1
 
.comment-form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical


/*  
  Buttons  
*/

.control-buttons
  display flex
  justify-content space-between
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0

/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size 
  background blue
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0
    height: 0
    border-style: solid
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0

  
  

